<!-- temporary icon: created by ed piel from noun project -->
<div class="header navbar">
  <div class="container header-container flex-row">
    <div id="logo">
      <%= link_to image_tag("temp_logo.png", alt: "home"), root_path, :id => "logo" %>
    </div>
    <div id="search-form">
      <%= form_tag("/search", method: "get") do %>
        <%= text_field_tag :search, params[:q], :placeholder => "Search for tutorials here!", :id => "search-text" %>
        <%= submit_tag("Search", :id => "search-submit", :class => "btn btn-default") %>
      <% end %>
    </div>
    <div id="flex-right"></div>
  </div>
</div>
