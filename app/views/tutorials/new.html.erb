<div class="container">
  <div class="card-content col-md-offset-2 col-md-8">
    <div class="row">
      <div class="page-content col-md-12">
        <h1>New Tutorial</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= simple_form_for(@tutorial, :html => { :class => 'form-horizontal' }) do |f| %>
          <div class="form-group">
            <%= f.input :title, :placeholder => "Title", input_html: { class: "form-control" } %>
          </div>

          <div class="form-group">
            <%= f.input :tagline, :placeholder => "Tagline", input_html: { class: "form-control" } %>
          </div>

          <div class="form-group">
            <%= f.input :content, :label => false, input_html: { class: "summernote-plugin" } %>
          </div>

          <div class="form-group">
            <%= f.button :submit, :value => "Publish", :class => "btn btn-raised btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

