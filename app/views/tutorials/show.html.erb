<div class="container"> 
  <div class="col-xs-offset-2 col-xs-8">
    <%= notice %>
  </div>

  <div class="col-xs-offset-2 col-xs-8 card">
    <div class="row">
      <div class="col-xs-12 page-content">
        <h2><%= @tutorial.title %></h2>
        <h3><%= @tutorial.tagline %></h3>

        <%# rendering raw html b/c that's what the content is %>
        <%= raw @tutorial.content %>

        <div class="float-right">
          <h3><small>
            <%= link_to 'Edit', edit_tutorial_path(@tutorial) %> |
            <%= link_to 'Back', tutorials_path %>
          </small></h3>
        </div>
      </div>
    </div>
          
    <div class="row">
      <div class="col-xs-12 suggestions">
        <h3>Suggested for You</h3>
        <div class="ul">
          <% @suggestions.each do |suggestion| %>
            <li class="li">
              <%= link_to suggestion.title, suggestion %>
            </li>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>